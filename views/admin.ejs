<%- include("header") %>

<div id="container">
    <%- include("menu") %> 
    <div id="content">
        <h1>Admin oldal</h1>
        <p>Itt lesz majd látható az összes ember profil adata!</p>
        <table class="adminTable">
            <% for (let i = 0; i < field.length; i++) { %>
                <% if (i != 3) { %>
                    <th><%= field[i].name %> </th>
                <% } %> 
            <% } %>
            <th>edit</th>
            <% for (let i = 0; i < users.length; i++) { %>
                <tr>
                <% for (let j = 0; j < field.length; j++) { %>
                    <% if (j != 3) { %>
                        <% if (j != 4 && j != 5) { %>
                            <td><span class="rejtettCim"><%= Object.keys(users[i])[j] %></span><span><%= Object.values(users[i])[j] %></span></td>
                        <% } else if(Object.values(users[i])[j] != null){ %> 
                            <td><span class="rejtettCim"><%= Object.keys(users[i])[j] %></span><span><%= new Intl.DateTimeFormat('hu', { year: 'numeric', month: '2-digit', day: '2-digit', hour: 'numeric', minute: 'numeric', second: 'numeric', hour12: false }).format(new Date(Object.values(users[i])[j]))%></span></td>
                        <% } else{ %>
                            <td><span class="rejtettCim"><%= Object.keys(users[i])[j] %></span><span></span></td>
                        <% } %> 
                    <% } %> 
                   
                <% } %>
                <td><span class="rejtettCim">Edit</span><a href="/admin/<%= users[i].ID %>">Edit</a></td>
                </tr>
            <% } %>
    
        </table>
    </div>
</div>

<%- include("footer") %>